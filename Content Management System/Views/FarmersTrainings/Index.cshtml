@model IEnumerable<Content_Management_System.Models.FarmersTraining>

@{
    ViewBag.Title = "List of events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Training events</h2>

<p>
    @Html.ActionLink("Add New", "Create") |
    @Html.ActionLink("View Applicants", "Index","TrainingApplications")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrainerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainingTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TrainerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainingTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TrainingId }) |
            @Html.ActionLink(" View Details", "Details", new { id=item.TrainingId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TrainingId })
        </td>
    </tr>
}

</table>
